@model ClassroomProject_V1._3_.Models.Payment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid bg-gradient-primary pb-4 pt-5 pt-md-8">
        <div class="container">
            <h1 class="display-4 text-white">ÖDEME SİLME SAYFASI</h1>
            <p class="lead text-white">Bu ekrandan ödeme silebilirsiniz.</p>
        </div>
    </div>
    <hr />
    @Html.ActionLink("   Ödeme Listesine Geri Dön", "Index", null, new { @class = "btn btn-warning fa fa-list" })
    <br />
    <br />
    <div class="row">
        <div class="col-md-6">

            <dl class="dl-horizontal">
                <dt>
                    <span class="badge badge-pill badge-primary"><i class="fa fa-address-card-o">&nbsp;&nbsp;Öğrenci Bilgileri</i></span>
                </dt>

                <dd style="font-size:medium;font-weight:600;">
                    @Html.DisplayFor(model => model.Student.FName)
                    @Html.DisplayFor(model => model.Student.LName)
                    | @Html.DisplayFor(model => model.Student.TCno)
                </dd>

                <dt>
                    <span class="badge badge-pill badge-primary"><i class="fa fa-user-o">&nbsp;&nbsp;Ödeyen Ad-Soyad</i></span>
                </dt>

                <dd style="font-size:medium; font-weight:600;">
                    @Html.DisplayFor(model => model.PayerNameSurname)
                </dd>

                <dt>
                    <span class="badge badge-pill badge-primary"><i class="fa fa-calendar-o">&nbsp;&nbsp;Tarih</i></span>
                </dt>

                <dd style="font-size:medium;font-weight:600;">
                    @Html.DisplayFor(model => model.Date)
                </dd>

                <dt>
                    <span class="badge badge-pill badge-primary"><i class="fa fa-try">&nbsp;&nbsp;Tutar</i></span>
                </dt>

                <dd style="font-size:medium;font-weight:600;">
                    @Html.DisplayFor(model => model.Total)
                    TL
                </dd>

            </dl>
        </div>
    </div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col">
                <h3>Bunu ödemeyi silmek istediğine emin misin?</h3>
            </div>
            <div class="col">
                <div style="float:left;">

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash-o">&nbsp; &nbsp; SİL</i>
                    </button>

                </div>
            </div>
        </div>
    }
    <hr />
</div>

