@model ClassroomProject_V1._3_.Models.Payment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid bg-gradient-primary pb-4 pt-5 pt-md-8">
        <div class="container">
            <h1 class="display-4 text-white">ÖDEME DÜZENLEME SAYFASI</h1>
            <p class="lead text-white">Bu ekrandan ödeme düzenleyebilirsiniz.</p>
        </div>
    </div>
    <hr />
    @Html.ActionLink("  Ödeme Listesine Geri Dön", "Index", null, new { @class = "btn btn-warning fa fa-list" })
    <br />
    <br />

    @using (Html.BeginForm("Edit", "Payment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <span class="input-group-addon"><i class="fa fa-graduation-cap text-red"></i></span>
                <label>ÖĞRENCİ</label>
                <div class="input-group">
                    @Html.DropDownList("Student_Id", null, htmlAttributes: new { @class = "form-control", id = "normalDropDown" })
                </div>
                <small class="form-text text-muted">Yapılacak ödeme için bir öğrenci seçiniz</small>
                @Html.ValidationMessageFor(model => model.Student_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <span class="input-group-addon"><i class="fa fa-id-card-o text-blue"></i></span>
                <label>Ödemeyi Yapan Kişi</label>
                <div class="input-group">
                    @Html.EditorFor(model => model.PayerNameSurname, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <small class="form-text text-muted">Ödemeyi Yapan Kişinin Ad-Soyadını Giriniz.</small>
                @Html.ValidationMessageFor(model => model.PayerNameSurname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <span class="input-group-addon"><i class="fa fa-try text-green"></i></span>
                <label>Tutar</label>
                <div class="input-group">
                    @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <small class="form-text text-muted">Ödeme için verilen tutarı giriniz. (TL)</small>
                @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)
    </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-success ">
                        <i class="fa fa-floppy-o">&nbsp; &nbsp;Değişiklikleri Kaydet</i>
                    </button>
                </div>
            </div>
        </div>
        <hr />

    }

</div>

@section scripts
{
    <script>
        $(function () {
            $("#normalDropDown").chosen();
        });
    </script>
}

