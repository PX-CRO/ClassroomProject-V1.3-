@model IEnumerable<ClassroomProject_V1._3_.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}




<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid bg-gradient-primary pb-4 pt-5 pt-md-8 ">
        <div class="container text-white">
            <h1 class="display-4 text-white">SORULAR LİSTESİ</h1>
            <p class="lead">Bu ekrandan soruların detaylarını görüntüleyip, silme,ekleme ve güncelleme işlemlerini gerçekleştirebilirsiniz.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <p>
                @Html.ActionLink("  Yeni Soru Ekle", "Create", null, new { @class = "btn btn-info fa fa-plus" })
            </p>
        </div>

        <div class="col-md-2"></div>

        <div class="col-md-4">
            @using (Html.BeginForm("Index", "Questions", FormMethod.Get))
            {
                <div class="input-group" style="float:right">
                    @Html.TextBox("searching", null, htmlAttributes: new { @class = "form-control", @placeholder = "Aramak istediğin...", @style = "float:right" })

                    <span class="input-group-btn">
                        <button class="btn btn-search btn-info" type="submit"><i class="fa fa-search fa-fw"></i> ARA </button>
                    </span>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-condensed">
                    <tr>
                        <th><p>Sorular</p></th>
                        <th><p>Ders</p></th>
                        <th></th>
                    </tr>

                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="3" style="color:red;">
                                    Eşleşme Bulunamadı.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Question1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lesson.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("  Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn btn-primary fa fa-pencil-square-o" }) |
                                        @Html.ActionLink("  Detaylar & Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash-o" })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

