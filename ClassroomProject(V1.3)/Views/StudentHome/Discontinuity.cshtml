@model IEnumerable<ClassroomProject_V1._3_.Models.Discontinuity>
@{
    ViewBag.Title = "Discontinuity";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">ÖĞRENCİ DEVAMSIZLIK LİSTESİ</h1>
            <p class="lead">Bu ekrandan öğrenci devamsızlıklarını görüntülebilirsiniz.</p>
            <p class="lead">@Html.Label(Session["UserInf"].ToString())</p>
        </div>
    </div>

    <div class="row">
        <h3 class="display-4"></h3>
        
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-condensed">
                    <tr>
                        <th style="width:30%"><p>TARİH</p></th>
                        <th style="width:70%"><p>AÇIKLAMA</p></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>
</div>


