@model ClassroomProject_V1._3_.Models.Discontinuity

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container-fluid">
    <h3>Bunu devamsızlık bilgisini silmek istediğine emin misin?</h3>
    <div class="row">
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                <div style="float:left;">
                    @Html.ActionLink("   Devamsızlık Listesine Geri Dön", "Index", null, new { @class = "btn btn-warning fa fa-list" })
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash-o">&nbsp; &nbsp; SİL</i>
                    </button>

                </div>
            </div>
        }
        <br />
        <br />
        <br />
        <div class="col-md-6" style="font-size:large;">
            <div class="panel panel-primary">
                <div class="panel-heading">Devamsızlık Bilgileri</div>
                <div class="panel-body">

                    <dl class="dl-horizontal">
                        <dt>
                            <span class="label label-primary"><i class="fa fa-address-card-o">&nbsp;&nbsp;Öğrenci Bilgileri</i></span>
                        </dt>

                        <dd style="font-size:medium;font-weight:600;">
                            @Html.DisplayFor(model => model.Student.FName)
                            @Html.DisplayFor(model => model.Student.LName)
                            | @Html.DisplayFor(model => model.Student.TCno)
                        </dd>

                        <dt>
                            <span class="label label-primary"><i class="fa fa-calendar-o">&nbsp;&nbsp;Tarih</i></span>
                        </dt>

                        <dd style="font-size:medium; font-weight:600;">
                            @Html.DisplayFor(model => model.Date)
                        </dd>

                        <dt>
                            <span class="label label-primary"><i class="fa fa-align-justify">&nbsp;&nbsp;Açıklama</i></span>
                        </dt>

                        <dd style="font-size:medium;font-weight:600;">
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                    </dl>

                </div>
            </div>
        </div>
    </div>
</div>

